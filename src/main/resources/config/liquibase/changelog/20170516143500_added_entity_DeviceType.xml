<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity DeviceType.
    -->
    <changeSet id="20170516143500-1" author="jhipster">
        <createTable tableName="device_type">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="device_producer" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="device_model" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="device_version" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="source_type" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="has_dynamic_id" type="boolean" valueBoolean="false">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

        <createTable tableName="device_type_sensor_data">
            <column name="sensor_data_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="device_types_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="device_types_id, sensor_data_id" tableName="device_type_sensor_data"/>

        <createIndex indexName="idx_device_type_producer_model_version"
                     tableName="device_type"
                     unique="true">
            <column name="device_producer" type="varchar(255)"/>
            <column name="device_model" type="varchar(255)"/>
            <column name="device_version" type="varchar(255)"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
