                  file="config/liquibase/admin_user.csv"
                  separator=";"
                  tableName="radar_user">
            <column name="activated" type="boolean"/>
            <column name="created_date" type="timestamp"/>
        </loadData>
        <loadData encoding="UTF-8"
                  file="config/liquibase/admin_role.csv"
                  separator=";"
                  tableName="radar_role"/>
        <loadData encoding="UTF-8"
                  file="config/liquibase/admin_role_user.csv"
                  separator=";"
                  tableName="role_users"/>
    </changeSet>

    <changeSet id="201708301031-2" author="dverbeec@its.jnj.com" context="dev, test">
        <loadData encoding="UTF-8"
                  file="config/liquibase/project.csv"
                  separator=";"
                  tableName="project"/>
        <loadData encoding="UTF-8"
                  file="config/liquibase/sensor_data.csv"
                  separator=";"
                  tableName="sensor_data"/>
        <loadData encoding="UTF-8"
                  file="config/liquibase/device_type.csv"
                  separator=";"
                  tableName="device_type"/>
        <loadData encoding="UTF-8"
                  file="config/liquibase/device_type_sensor_data.csv"
                  separator=";"
                  tableName="device_type_sensor_data"/>
        <loadData encoding="UTF-8"
                  file="config/liquibase/project_device_type.csv"
                  separator=";"
                  tableName="project_device_type"/>
